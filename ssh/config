Host *.home
  ProxyCommand ssh -q -F /dev/null bastion.twan.ovh -W %h:%p
  RemoteForward 52698 localhost:52698

Host rx01.home
  IdentityFile ~/.ssh/id_rsa

Host pve01.home pvr.home
  User root

Host *.github.com github.com
  Hostname ssh.github.com
  Port 443
  User git
  ForwardX11 no
  ForwardAgent no

Host *
  Protocol 2
  Compression yes
  ServerAliveInterval 5
  ForwardAgent yes
  ForwardX11 yes
  CheckHostIP yes
  VerifyHostKeyDNS yes
  PermitLocalCommand yes
  LocalCommand ssh -o PermitLocalCommand=no %n "[[ -d ~/.dotfiles ]] && (which git >/dev/null && echo -e 'Updating dotfiles on %h ...' && cd ~/.dotfiles && git pull -q && ./.install -Q) || (echo -e '\033[0;31mDotfiles are not installed on %h !\033[0m')"
