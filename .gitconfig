[core]
	excludesfile = ~/.gitignore_global
[user]
	name = Antoine Rahier
	email = antoine.rahier@gmail.com
[github]
	user = Twanislas
[alias]
	lg = log --topo-order --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	st = status --ignore-submodules=dirty --short
	df = diff --no-ext-diff
	cm = commit -m
	cam = commit -a -m
[push]
	default = current
